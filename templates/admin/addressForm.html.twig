{% extends 'baseAdmin.html.twig' %}

{% block title %}adresses{% endblock %}

{% block body %}

    {{ form_start(addressForm) }}

    <div class="row">
        <div class="col-3">
            {{ form_row(addressForm.user) }}
        </div>
        <div class="col-3">
            {{ form_row(addressForm.name) }}
        </div>
        <div class="col-6">
            {{ form_row(addressForm.street) }}
        </div>
    </div>
    
    <div class="row">
        <div class="col-6">
            {{ form_row(addressForm.complement) }}
        </div>
        <div class="col-3">
            {{ form_row(addressForm.zip) }}
        </div>
        <div class="col-3">
            {{ form_row(addressForm.city) }}
        </div>
    </div>

    <div class="col-12 d-flex justify-content-end">
        <a href="{{ path('admin_address_index') }}" class="btn btn-danger m-3">Annuler</a>
        <button class="btn btn-success m-3">Cr√©er / Modifier</button>
    </div>
        
    {{ form_end(addressForm) }}

{% endblock %}