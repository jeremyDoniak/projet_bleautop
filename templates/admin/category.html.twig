{% extends 'baseAdmin.html.twig' %}

{% block title %}categories{% endblock %}

{% block body %}

    <h1>Liste des différentes categories</h1>

    <table class="table text-center table-hover table-sm">
        <thead>
            <tr>
                <th>N°</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr class="align-middle">
                    <td>{{ loop.index }}</td>
                    <td>{{ category.title }}</td>
                     <td>
                        <a href="{{ path('category_update', {'id': category.id}) }}" class="text-primary"><i class="fas fa-pen-square"></i></a>
                        <a href="{{ path('category_delete', {'id': category.id}) }}" class="text-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-end my-5">
        <a href="{{ path('category_create') }}" class="btn">Ajouter un produit</a>
    </div>

{% endblock %}