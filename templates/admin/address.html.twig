{% extends 'baseAdmin.html.twig' %}

{% block title %}adresses{% endblock %}

{% block body %}
<span class="row py-3 baseflash">
    <span class="col-8 offset-2">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }} bg-{{ label }} text-light text-center p-3 rounded">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </span>
</span>

    <h1>Liste des différentes adresses</h1>

    <table class="table text-center table-hover table-sm">
        <thead>
            <tr>
                <th>N°</th>
                <th>Nom de l'utilisateur</th>
                <th>Nom de l'adresse</th>
                <th>Adresse</th>
                <th>Complément d'adresse</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for address in addresses %}
                <tr class="align-middle">
                    <td>{{ loop.index }}</td>
                    <td>{{ address.user.name }}</td>
                    <td>{{ address.name }}</td>
                    <td>{{ address.street }}</td>
                    <td>{{ address.complement }}</td>
                    <td>{{ address.zip }}</td>
                    <td>{{ address.city }}</td>
                    <td>
                        <a href="{{ path('admin_address_update', {'id': address.id}) }}" class="text-primary"><i class="fas fa-pen-square"></i></a>
                        <a href="{{ path('admin_address_delete', {'id': address.id}) }}" class="text-danger" onclick="return confirm_delete()"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-end my-5">
        <a href="{{ path('admin_address_create') }}" class="btn">Ajouter une adresse</a>
    </div>

{% endblock %}