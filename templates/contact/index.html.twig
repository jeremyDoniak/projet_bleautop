{% extends 'base.html.twig' %}

{% block title %}contact{% endblock %}

{% block body %}

<section class="contact">
    <span class="row py-3 baseflash">
        <span class="col-8 offset-2">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }} bg-{{ label }} text-light text-center p-3 rounded">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </span>
    </span>
    <div class="container-contact">
        <div class="contactez">
            <h4>Contactez-nous</h4><br><br>
            <p>Margot-Margaud Fernandez<br>
                Bleautop SARL<br>
                81934680071<br>
                <br>7, boulevard Guibert
                <br>35 317 PottierVille
                <br>+33228632669
            </p>
            <br>
            <div class="logos_sociaux_contact">
                <a href="https://www.instagram.com/">
                    <img src="{{ asset('img/logo_instagram_noir_web.png') }}" alt="logo instagram">
                </a>
                <a href="https://www.facebook.com/">
                    <img src="{{ asset('img/logo_facebook_noir_web.png') }}" alt="logo facebook">
                </a>
                <a href="https://twitter.com/">
                    <img src="{{ asset('img/logo_twitter_noir_web.png') }}" alt="logo twitter">
                </a>
            </div>
        </div>
        <div class="form_contact">
    
            {{ form_start(contactForm) }}
                {{ form_row(contactForm.name) }}
                {{ form_row(contactForm.email) }}
                {{ form_row(contactForm.message) }}
                
                <div class="text-end d-flex justify-content-between">
                    {{ form_row(contactForm.agreeTerms) }}
                    <button type="submit" class="btn_shape btn-success">Valider</button>
                </div>
            {{ form_end(contactForm) }}
    
        </div>
    </div>
</section>

<section class="bg">

</section>

{% endblock %}
