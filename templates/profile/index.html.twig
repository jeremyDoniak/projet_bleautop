{% extends 'base.html.twig' %}

{% block title %}utilisateurs{% endblock %}

{% block body %}
        <section class="user">
            <div class="row py-5">
                <div class="col-8 offset-2">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="flash-{{ label }} bg-{{ label }} text-light p-3 mb-5 rounded">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
            <h1>Mon profil</h1>

            <div class="card_user_container">
                <div class="card_user">
                    <h2>Mes informations</h2>
                    <div class="btn">
                        <a href="{{ path('profile') }}">+ info</a>
                    </div>
                </div>
                <div class="card_user">
                    <h2>Mes adresses</h2>
                    <div class="btn">
                        <a href="{{ path('profile_address') }}">+ info</a>
                    </div>
                </div>
                <div class="card_user">
                    <h2>Mes commandes</h2>
                    <div class="btn">
                        <a href="{{ path('order_index', {'id': app.user.id }) }}">+ info</a>
                    </div>
                </div>
            </div>
        </section>

{% endblock %}