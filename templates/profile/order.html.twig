{% extends 'base.html.twig' %}

{% block title %}commandes{% endblock %}

{% block body %}
    <section class="user">
        <div class="row py-5">
            <div class="col-8 offset-2">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash-{{ label }} bg-{{ label }} text-light p-3 mb-5 rounded">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        <h1>Liste des différentes commandes</h1>

        <table class="table text-center table-hover table-sm">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>N° de commande</th>
                    <th>Date de commande</th>
                    <th>Date de paiement</th>
                    <th>Total</th>
                    <th>Détails</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr class="align-middle">
                        <td>{{ loop.index }}</td>
                        <td>{{ order.id }}</td>
                        <td>{{ order.orderDate|date('d/m/y') }}</td>
                        <td>{{ order.paymentDate|date('d/m/y') }}</td>
                        <td>{{ order.amount }}</td>
                        <td>
                            <a href="{{ path('profile_order_line', {'id': order.id}) }}" class="text-danger"><i class="fas fa-eye"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="text-end">
            <a href="{{ path('profile_index') }}" class="btn btn-outline-secondary btn-sm">Retour</a>
        </div>
    </section>
{% endblock %}