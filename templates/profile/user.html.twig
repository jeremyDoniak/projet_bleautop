{% extends 'base.html.twig' %}

{% block title %}informations utilisateur{% endblock %}

{% block body %}
    <section class="user">
        <div class="row py-5">
            <div class="col-8 offset-2">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash-{{ label }} bg-{{ label }} text-light p-3 mb-5 rounded">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        <h1>Mes informations</h1>
    
        <table class="table text-center table-hover table-sm">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Entreprise</th>
                    <th>Adresse(s)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                    <tr class="align-middle">
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.phone|default(' ') }}</td>
                        <td>{{ user.company|default(' ') }}</td>
                        <td>
                            {% for address in user.addresses %}
                                <ul>
                                    <li>{{ address.name }}</li>
                                </ul>
                            {% endfor %}
                        </td>

                        <td class="align-middle">
                            <a href="{{ path('profile_update') }}" class="text-primary"><i class="fas fa-pen-square"></i></a>
                        </td>
                    </tr>
            </tbody>
        </table>
    
        <div class="col-12 d-flex justify-content-end">
            <a href="{{ path('profile_index') }}" class="btn btn-danger m-3">Retour</a>
            <a href="{{ path('profile_address_create') }}" class="btn btn-success m-3">Ajouter une adresse</a>
        </div>
    </section>

{% endblock %}