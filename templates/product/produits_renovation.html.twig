{% extends 'base.html.twig' %}

{% block title %}produits{% endblock %}

{% block body %}

<section class="produits">
    <span class="row py-3 baseflash">
        <span class="col-8 offset-2">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }} bg-{{ label }} text-light text-center p-3 rounded">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </span>
    </span>
    <div>
        <ul>
            <li>
                <a href="{{ path('produits_renovation') }}" class="active">Rénovation</a>
            </li>
            <li>
                <a href="{{ path('produits_packs') }}">Packs</a>
            </li>
            <li>
                <a href="{{ path('produits_volumes') }}">Volumes</a>
            </li>
            <li>
                <a href="{{ path('produits_prises') }}">Prises</a>
            </li>
        </ul>
    </div>
    <div class="card_produits_container">
        {% for product in products %}
            {% if product.category.name == "renovation" %}
                <div class="card_produits">
                    <div>
                        <img src="{{ asset('img/' ~ product.img) }}" alt="photo {{ product.name }}">
                    </div>
                    <div>
                        <h3>{{ product.name }}</h3>
                    </div>
                    <div>
                        <p><b>{{ product.price }} €</b></p>
                    </div>
                    <div class="check_condition">
                        <span>
                            <input type="checkbox" name="check" required>
                            <label for="check">J’ai lu et j’accepte les conditions énoncé dans la documentation de validation.</label>
                        </span>
                    </div>
                    <div class="btn">
                        {# {% if input.check == 1 %} #}
                            <a href="{{ path('cart_add', {'id': product.id}) }}">Ajouter au panier</a>
                        {# {% endif %} #}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</section>

{% endblock %}
